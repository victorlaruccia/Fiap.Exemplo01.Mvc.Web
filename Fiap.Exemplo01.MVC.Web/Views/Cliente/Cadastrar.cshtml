@model Fiap.Exemplo01.MVC.Web.Models.Cliente
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastro de Cliente</h2>
@if (TempData["msg"] != null)
{
    <div class="alert alert-success">@TempData["msg"]</div>
}



@using (Html.BeginForm())
{   <div class="form-group">
        @Html.LabelFor(c => c.Nome)
        @Html.TextBoxFor(cli => cli.Nome, new { placeholder = "Digite seu nome", @class = "form-control" })
    </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Idade)
            @Html.TextBoxFor(c => c.Idade, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Credito)
            @Html.TextBoxFor(c => c.Credito, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.DataNascimento)
            @Html.TextBoxFor(c => c.DataNascimento, new { @class = "form-control" })

        </div>
        <div class="form-group">
            @Html.CheckBoxFor(c => c.NecessidadesEspeciais)
            @Html.LabelFor(c => c.NecessidadesEspeciais)
        </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
}