@model List<Fiap.Exemplo01.MVC.Web.Models.Cliente>
@{
    ViewBag.Title = "Listar";
}

<h2>Listar</h2>

<table class="table"> 
    <thead>
    <tr>
        <th>Nome</th>
        <th>Idade</th>
        <th>Crédito<th/>
    </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Idade</td>
                <td>@item.Credito</td>
            </tr>
        }
    </tbody>
</table>